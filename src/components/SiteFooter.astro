---
import HeaderLink from "./HeaderLink.astro";
const today = new Date();
const email = "datngva.work@gmail.com";
---

<footer class="footer-custom">
  <div class="footer-columns">
    <div class="footer-col footer-email">
      <div class="footer-label">EMAIL? EMAIL!</div>
      <div class="footer-email-row">
        <span class="footer-email-text" id="footer-email">{email}</span>
        <button class="footer-copy-btn" onclick="navigator.clipboard.writeText('{email}')">
          <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15V5a2 2 0 0 1 2-2h10"/></svg>
        </button>
      </div>
    </div>
    <div class="footer-col footer-socials">
      <div class="footer-label">SOCIALS</div>
      <ul>
        <li><a href="https://www.linkedin.com/in/idat/" target="_blank">LinkedIn</a></li>
        <li><a href="https://www.instagram.com/dat.nguyen.van/" target="_blank">Instagram</a></li>
      </ul>
    </div>
    <div class="footer-col footer-copyright">
      <div>Copyright Â© {new Date().getFullYear()} Dat Nguyen.</div>
      <!-- <div style="margin-top:1em; font-size:0.95em;">This website is typeset in Playfair Display and Inter, and developed in Astro.</div> -->
    </div>
  </div>
</footer>
<div class="footer-bottom-bar">
  You could have been anywhere on the internet, yet you're here. Thanks for visiting!
</div>
<script is:inline>
  const btn = document.querySelector('.footer-copy-btn');
  if (btn) {
    btn.addEventListener('click', function() {
      const email = document.getElementById('footer-email').textContent;
      navigator.clipboard.writeText(email);
    });
  }
</script>
